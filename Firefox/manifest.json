{
  "manifest_version": 3,
  "name": "LLM-Aided Page Cleaner",
  "version": "0.1.0",
  "description": "Extracts useful content and controls with the help of an LLM.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Clean page"
  },
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png"
  }
}
